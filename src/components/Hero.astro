---
const personalImageAlt = "Rômulo Oliveira";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHub from "./icons/GitHub.astro";
import Download from "./icons/Download.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/romin.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/midudev"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponível para projetos</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Olá, sou Rômulo Oliveira
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-purple-500 [&>strong]:text-purple-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +3 anos de experiência. <strong>Desenvolvedor de Software</strong> de Fortaleza,
    Brasil. Especializado no desenvolvimento de tecnologias web.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:miduga@gmail.com">
      <MailIcon class="size-4" />
      Contato
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/roliveira94/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/RomuloOliveira94">
      <GitHub class="size-4" />
      Github
    </SocialPill>
    <SocialPill href="/resume-2024.pdf">
      <Download class="size-4" />
      Currículo
    </SocialPill>
  </nav>
</div>
